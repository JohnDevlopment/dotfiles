# -*- mode: conf; -*-
[user]
	email = {{ .git_email }}
	name = {{ .git_user }}
[init]
	defaultBranch = main
[merge]
	tool = meld
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = store
	username = {{ .git_user }}
[alias]
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
