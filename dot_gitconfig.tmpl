# -*- mode: conf; -*-
[user]
	email = {{ .gitEmail }}
	name = {{ .gitUser }}
[init]
	defaultBranch = main
[merge]
	tool = meld
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = store
	username = {{ .gitUser }}
[alias]
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
[guitool "Commit/Default Convention"]
	cmd = mate-terminal -x ~/programming/Shell/commit-git-gui
	noconsole = yes
[guitool "Commit/Default Convention (GUI)"]
	cmd = ~/src/commit.py
	noconsole = yes
[guitool "Commit/Git Fixup"]
	cmd = git fixup-gui
	needsfile = yes
[diff "gunzip"]
	textconv = gunzip -c
